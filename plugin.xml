<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        id="cordova-plugin-fingerprintplugin"
        version="1.0.0">

  <name>FingerprintPlugin</name>
  <description>Plugin de huella para OutSystems</description>
  <license>MIT</license>

  <js-module src="www/fingerprint.js" name="FingerprintPlugin">
    <clobbers target="window.plugins.fingerprint" />
  </js-module>

  <platform name="android">
    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="FingerprintPlugin">
        <param name="android-package" value="com.fingerprint.FingerprintPlugin"/>
      </feature>
    </config-file>

    <config-file target="AndroidManifest.xml" parent="/manifest">
      <uses-permission android:name="android.permission.INTERNET" />
      <uses-permission android:name="android.permission.CAMERA" />
    </config-file>

    <config-file target="AndroidManifest.xml" parent="application">
      <application
        xmlns:tools="http://schemas.android.com/tools"
        android:label="OutSystems App"
        tools:replace="android:label" />
    </config-file>

    <source-file src="src/android/FingerprintPlugin.java" target-dir="src/com/fingerprint" />

    <!-- Librería AAR sin target-dir -->
    <lib-file src="src/android/libs/finger-7.0.1.aar" />

    <!-- ⚠ Elimina esta línea si no es estrictamente necesaria -->
    <!-- <framework src="src/android/packaging.gradle" custom="true" type="gradleReference"/> -->

  </platform>
</plugin>
